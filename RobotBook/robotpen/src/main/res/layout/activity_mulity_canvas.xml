<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_mulity_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cn.robotpen.act.show.MulityCanvasActivity">

        <cn.robotpen.core.widget.WhiteBoardView
            android:id="@+id/whiteBoardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clearnScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickClearn"
                android:text="清除" />

            <Button
                android:id="@+id/delScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickdel"
                android:text="删除页" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#808080" />

            <Button
                android:id="@+id/gotoPro"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:onClick="onClickPro"
                android:text="上一页" />

            <Button
                android:id="@+id/gotoNext"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:onClick="onClickNext"
                android:layout_marginTop="2dp"
                android:clickable="false"
                android:text="下一页" />
        </LinearLayout>

    </RelativeLayout>
</layout>